/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php $_description = $this->getProduct()->getDescription(); ?>
<?php
$_icons = $this->helper('productdesign')->getProductIcons($this->getProduct());
?>
<?php if (count($_icons)): ?>
    <div class="qs-img-options">
        <ul>
        <?php foreach($_icons as $label=>$image):?>
            <li><img title="<?php echo $label?>" src="<?php echo $image?>" /></li>
        <?php endforeach;?>
        </ul>
    </div>
<?php endif; ?>
<?php if ($_description): ?>
    <div class="qs-content-description">
        <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?>
    </div>
<?php endif; ?>
