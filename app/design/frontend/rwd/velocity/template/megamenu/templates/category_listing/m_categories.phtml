$categoryids = $this->getParentCategoriesIds();
?>
 <?php if (count($this->getCategories())): ?>  
<div class="row ms-category-level">
    <div class="col-category col-xs-12">
        <div class="row">
            <?php $i=1;foreach($categoryids as $categoryid): ?>
