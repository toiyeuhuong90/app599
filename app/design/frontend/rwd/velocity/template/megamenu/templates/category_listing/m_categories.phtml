                        <?php endif;?>
                    <?php if($children->hasChildren() && count($childs)>0): ?>
                    <div class="col-xs-12 col-sub">
                        <?php foreach($childs as $child): ?>
                            <a class="form-group" href="<?php echo $child->getUrl() ?>"><?php echo $child->getName() ?></a>
