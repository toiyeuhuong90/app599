/** @var $helper ET_SocialLogin_Helper_Data */
/** @var $this ET_SocialLogin_Block_Auth */
$helper = Mage::helper('et_sociallogin');
$accs = $this->getSocialProviders();
$storeId = Mage::app()->getStore()->getId();
$sizeClass = $helper->getSocialIconsSizeClass($storeId);
$iconsClass = $helper->getSocialIconsClass($storeId);
?>
<?php if(count($accs)):?>

    <div class="socibutton social-auth <?php echo $this->getSize(); ?>">

        <h4><?php echo $this->getLabelText(); ?></h4>
    <ul class="social-list">
        <?php foreach ($accs as $provider => $item): ?>
            <li>
                <a href="<?php echo Mage::getUrl('social/auth/login', array('provider' => $provider, 'responsetype' => $this->getResponseType())) ?>"
                   title="<?php echo $item['auth_title'] ?>"
                   class="soclogin socicon <?php echo $provider; ?> <?php echo $sizeClass;?> <?php echo $iconsClass;?>"><span><?php echo $item['title'] ?></span></a></li>

        <?php endforeach; ?>
    </ul>

    <div class="clear"></div>
    </div>

<?php endif; ?>


