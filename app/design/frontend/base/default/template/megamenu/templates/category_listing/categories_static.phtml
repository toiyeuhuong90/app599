                    <a class="form-group <?php echo Mage::helper('megamenu')->setLevel($category->getLevel()); ?>" href="<?php echo $category->getUrl() ?>"><?php echo $category->getName() ?></a>
                <?php  endforeach; ?>
                </div>
            <?php  endforeach; ?>
        </div>
    <?php endif; ?>
