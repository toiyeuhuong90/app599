                    if (images_tmp != null) {
                        images_tmp = images_tmp.split(',');
                        $('giftcard-template-images').value = images_tmp[image_id];
                    }
                    urlUploadImage = '';
                }
                $('giftcard-use-custom-image').value = '0';
            }
            /**
             * Apply template
